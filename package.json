{
	"name": "scroll-seamless",
	"version": "1.3.0",
	"description": "A seamless scroll library for JS, Vue, and React.",
	"type": "module",
	"keywords": [
		"seamless",
		"scroll",
		"marquee",
		"vue",
		"react",
		"typescript"
	],
	"homepage": "https://github.com/chao921125/scroll-seamless",
	"repository": {
		"type": "git",
		"url": "https://github.com/chao921125/scroll-seamless.git"
	},
	"bugs": {
		"url": "https://github.com/chao921125/scroll-seamless/issues"
	},
	"author": {
		"name": "chao921125",
		"email": "chao921125@sina.com",
		"url": "https://github.com/chao921125"
	},
	"license": "BSD-3-Clause",
	"main": "dist/core/index.cjs.js",
	"module": "dist/core/index.esm.js",
	"types": "./dist/core/index.d.ts",
	"typesVersions": {
		"*": {
			"vue": [
				"./dist/vue/index.d.ts"
			],
			"react": [
				"./dist/react/index.d.ts"
			],
			"core": [
				"./dist/core/index.d.ts"
			],
			"types": [
				"./dist/types/index.d.ts"
			]
		}
	},
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/core/index.d.ts",
			"import": "./dist/core/index.esm.js",
			"require": "./dist/core/index.cjs.js"
		},
		"./vue": {
			"types": "./dist/vue/index.d.ts",
			"import": "./dist/vue/index.es.js",
			"require": "./dist/vue/index.cjs.js"
		},
		"./react": {
			"types": "./dist/react/index.d.ts",
			"import": "./dist/react/index.esm.js",
			"require": "./dist/react/index.cjs.js"
		},
		"./core": {
			"types": "./dist/core/index.d.ts",
			"import": "./dist/core/index.esm.js",
			"require": "./dist/core/index.cjs.js"
		},
		"./types": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/types/index.d.ts",
			"require": "./dist/types/index.d.ts"
		}
	},
	"scripts": {
		"build": "rimraf dist && rollup -c",
		"prepublishOnly": "npm run build",
		"test:unit": "vitest run"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^28.0.6",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-typescript": "^12.1.4",
		"@testing-library/react": "^16.3.0",
		"@testing-library/vue": "^8.1.0",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@types/vue": "^2.0.0",
		"@vitejs/plugin-vue": "^6.0.0",
		"@vitest/ui": "^3.2.4",
		"@vue/compiler-sfc": "^3.5.17",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"rimraf": "^6.0.1",
		"rollup": "^4.45.1",
		"rollup-plugin-dts": "^6.2.1",
		"rollup-plugin-postcss": "^4.0.2",
		"rollup-plugin-terser": "^7.0.2",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"vite": "^7.0.4",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^3.2.4",
		"vue": "^3.5.17",
		"vue-tsc": "^3.0.1"
	},
	"overrides": {},
	"engines": {
		"node": ">=14.0.0",
		"npm": ">=6.14.18",
		"yarn": ">=3.0.0"
	},
	"browserslist": [
		"defaults",
		"> 1%",
		"not dead",
		"not op_mini all",
		"last 2 versions",
		"Chrome > 51",
		"Edge > 15",
		"Firefox > 54",
		"Safari > 10",
		"not IE <= 11",
		"Android >= 6.0",
		"iOS > 10",
		"supports es6-module"
	],
	"publishConfig": {
		"access": "public"
	}
}
